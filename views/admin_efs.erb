<%= erb :header_partial %>

<div class="row">
  <div class="col-lg-12">
    <h1>Export Formats <small>Administration</small></h1>
    <ol class="breadcrumb">
      <li><a href="/admin/settings"><i class="fa fa-cog"></i> Vulnreport Settings</a></li>
      <li class="active"><i class="fa fa-print"></i> Export Formats</li>
    </ol>
  </div>
</div><!-- /.row -->

<%= erb :admin_types_nav_partial %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <span style="font-size:12pt;"><i class="fa fa-print"></i> Report Export Formats</span>
        <span style="position:absolute;right:25px;">
          <a href="/admin/exportFormats/new" style="color:#FFF;"><i class="fa fa-plus"></i> New Export Format</a>
        </span>
      </div>
      <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th style="width:7%; text-align:center;"><b>In Use</b></th>
              <th style="width:23%"><b>Name</b></th>
              <th style="width:70%"><b>Description</b></th>
            </tr>
          </thead>

          <tr id="ef_0">
            <td style="width:7%; text-align:center;">
              <% if RecordType.count(:exportFormat => 0) > 0 %>
                <i class="fa fa-check" style="color:#009933;"></i>
              <% else %>
                <i class="fa fa-times" style="color:#B40404;"></i>
              <% end %>
            </td>
            <td style="width:23%"><a href="/admin/exportFormats/0"><i>Default Format</i></a></td>
            <td style="width:70%"><i>Default export format used if Record Type does not specify an overriding format</i></td>
          </tr>

          <% if !@exportFormats.nil? %>
            <% @exportFormats.each do |ef| %>
              <tr id="ef_<%=ef.id%>">
                <td style="width:7%; text-align:center;">
                  <% if RecordType.count(:exportFormat => ef.id) > 0 %>
                    <i class="fa fa-check" style="color:#009933;"></i>
                  <% else %>
                    <i class="fa fa-times" style="color:#B40404;"></i>
                  <% end %>
                </td>
                <td style="width:23%"><a href="/admin/exportFormats/<%=ef.id%>"><%=h(ef.name)%></a></td>
                <td style="width:70%"><%=h(ef.description)%></td>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

<%= erb :footer_partial %>