<%= erb :header_partial %>

<div class="row">
  <div class="col-lg-12">
    <h1>Export Formats <small>Administration</small></h1>
    <ol class="breadcrumb">
      <li><a href="/admin/settings"><i class="fa fa-cog"></i> Vulnreport Settings</a></li>
      <li><a href="/admin/exportFormats"><i class="fa fa-print"></i> Export Formats</a></li>
      <li class="active"><i class="fa fa-print"></i> New Export Format</li>
    </ol>
  </div>
</div><!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <form class="form-horizontal" role="form" method="POST" action="/admin/exportFormats/new">
      <%= csrf_tag %>

      <div class="form-group">
        <div class="col-sm-1"></div>
        <div class="col-sm-8">
          Enter the name and description for a new Export Format. You will be able to edit the template on the next screen. The template will start as a clone of the <a href="/admin/exportFormats/0">default export format</a>.
        </div>
      </div>

      <div class="form-group">
        <label for="efName" class="col-sm-2 control-label">Name: </label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="efName" name="efName" placeholder="Name">
        </div>
        <div class="col-sm-1" style="text-align:left; margin-left:-20px; padding-top:5px;"></div>
      </div>

      <div class="form-group">
        <label for="efDesc" class="col-sm-2 control-label">Description: </label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="efDesc" name="efDesc" placeholder="Description">
        </div>
        <div class="col-sm-1" style="text-align:left; margin-left:-20px; padding-top:5px;"></div>
      </div>

      <div class="form-group">
        <div class="col-sm-4"></div>
        <div class="col-sm-2" style="text-align:center;">
          <button type="submit" class="btn btn-primary" id="save" name="save" value="save">Create and Edit Template</button>
        </div>
        <div class="col-sm-3"></div>
      </div>

    </form>
  </div>
</div>

<%= erb :footer_partial %>